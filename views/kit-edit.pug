extends layout

block content
    form(method='POST' action= 'edit')
            div.form-group
              label(for='title') title:
              input#title.form-control(type='text', placeholder='title..' name='kitTitle' value= kit[0].title)
            div.form-group
              label(for='content') Conetent:
              input#content.form-control(type='text' name='kitContent' value = kit[0].content)
            for section, index in sections
              - let parentSection = index
              div.form-group
                label(for='section') Section title:
                input#content.form-control(type='text' name='sections[' + index + '][sectionTitle]' value = section.title)
              div.form-group
                label(for='section') Section content:
                input#content.form-control(type='text' name='sections[' + index + '][sectionContent]' value = section.content)
              for resource, index in section.resources
                p= parentSection
                div.form-group
                  label(for='resource') Resource title:
                  input#content.form-control(type='text' name='[resources][sec-' + parentSection + '][no-' + index + '][resourceTitle]' value = resource.title)
                p= parentSection
                div.form-group
                  label(for='resource') Resource link:
                  input#content.form-control(type='text' name='[resources][sec-' + parentSection + '][no-' + index + '][resourceLink]' value = resource.link)
            div.form-group#form-end
            button#add-section.btn.btn-primary(type='button' onClick="addSection()") Add section
            button.btn.btn-primary(type='submit') Submit

