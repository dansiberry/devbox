extends layout

block content
  div.homepage-wrapper
    img#cloud-bottom(src="images/cloud-bottom.svg")
    img#cloud-1(src="images/cloud-2.svg")
    img#cloud-2(src="images/cloud-1.svg")
    div.landing-container
      img#link-box(src="images/link-box.svg")
      div.landing-hook
        h1 Share and store the best bits of the internet
        button#start.lc-btn(type='button' onClick="window.formActivate(), window.addSection()") Start

    div(class="col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0 main-form-container")
      form(method='POST' id="main-form" action='/kits/new')
              div.form-group
                input#kit-title.form-control(type='text', placeholder='Name your linkbox' name='kitTitle' required)
              div.form-group
                input#kit-content.form-control(type='text' value="null" name='kitContent')
              div.form-group#form-end

              div.main-form-buttons
                button#add-section.btn.btn-primary(type='button' onClick="window.addSection()") Add </br> section
                button#submit-box.btn.btn-primary(type='submit' onClick="window.checkForm(event)") Done
                div.flag#add-section-flag
                  p Add a section
                div.flag#add-link-flag
                  p Add a link
